{
    "name": "dlindberg/dom-document-factory",
    "type": "library",
    "description": "Simple DOMDocument factory with html purify and string output",
    "keywords": [
        "dlindberg",
        "DOMDocument",
        "doc factory"
    ],
    "homepage": "https://github.com/dlindberg/DOMDocumentFactory",
    "license": "MIT",
    "authors": [
        {
            "name": "Dane Lindberg",
            "email": "dane@lindberg.xyz",
            "homepage": "https://danelindberg.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : "^7.2",
        "ext-dom"             : "*",
        "ext-libxml"          : "*",
        "ezyang/htmlpurifier" : "^4.10"
    },
    "require-dev": {
        "phpunit/phpunit" : "^8.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "dlindberg\\DOMDocumentFactory\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "dlindberg\\DOMDocumentFactory\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
